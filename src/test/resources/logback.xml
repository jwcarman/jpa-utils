<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Suppress Logback's internal status messages -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-40logger{39} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Suppress HikariCP connection validation warnings during test teardown -->
    <logger name="com.zaxxer.hikari.pool.PoolBase" level="ERROR" />

    <!-- Suppress SQL Server JDBC driver connection warnings during container startup -->
    <logger name="com.microsoft.sqlserver.jdbc" level="SEVERE" />

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>